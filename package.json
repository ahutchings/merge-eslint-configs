{
  "name": "inline-eslint-config",
  "version": "1.0.0",
  "description": "Inlines an ESLint config object to simplify ESLint plugin development and consumption.",
  "repository": "skateshop/inline-eslint-config",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:commonjs",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "check": "npm run lint && npm run test",
    "clean": "rimraf lib",
    "lint": "standard",
    "prepublish": "npm run clean && npm run check && npm run build",
    "test": "cross-env BABEL_ENV=commonjs jest"
  },
  "keywords": [
    "eslint"
  ],
  "author": "Andrew Hutchings <andrew.hutchings@gmail.com> (https://andrewhutchings.com)",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-jest": "^16.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "cross-env": "^3.1.3",
    "jest": "^16.0.1",
    "rimraf": "^2.5.4",
    "standard": "^8.4.0"
  },
  "babel": {
    "presets": [
      "stage-0",
      "latest"
    ],
    "env": {
      "commonjs": {
        "plugins": [
          [
            "transform-es2015-modules-commonjs",
            {
              "loose": true
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "testPathDirs": [
      "<rootDir>/src/"
    ],
    "testRegex": "__tests__/.*-test.js"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "lodash": "^4.16.4",
    "require-relative": "^0.8.7"
  }
}
